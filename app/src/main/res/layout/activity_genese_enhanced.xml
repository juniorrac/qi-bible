<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bleu"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".activiteListCoin.EnhancedGeneseActivity">

    <!-- Header avec titre et points -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="8dp"
        android:backgroundTint="#1976D2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/titre"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Quiz Biblique"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ’°"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/coinText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@android:color/white"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Indicateur de difficultÃ© -->
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="4dp"
        android:backgroundTint="@android:color/white">

        <TextView
            android:id="@+id/difficultyLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â­ Facile"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:textColor="#4CAF50" />

    </androidx.cardview.widget.CardView>

    <!-- Question -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        android:backgroundTint="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:id="@+id/questionLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Question sera affichÃ©e ici"
                android:textSize="18sp"
                android:textColor="#333333"
                android:lineSpacingExtra="4dp"
                android:gravity="center"
                android:textStyle="bold" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Boutons de rÃ©ponses -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <Button
            android:id="@+id/answerBtn1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="12dp"
            android:text="RÃ©ponse 1"
            android:textSize="16sp"
            android:textColor="#333333"
            android:background="@drawable/rounded_borders"
            android:onClick="checkAnswer" />

        <Button
            android:id="@+id/answerBtn2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="12dp"
            android:text="RÃ©ponse 2"
            android:textSize="16sp"
            android:textColor="#333333"
            android:background="@drawable/rounded_borders"
            android:onClick="checkAnswer" />

        <Button
            android:id="@+id/answerBtn3"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="12dp"
            android:text="RÃ©ponse 3"
            android:textSize="16sp"
            android:textColor="#333333"
            android:background="@drawable/rounded_borders"
            android:onClick="checkAnswer" />

        <Button
            android:id="@+id/answerBtn4"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="RÃ©ponse 4"
            android:textSize="16sp"
            android:textColor="#333333"
            android:background="@drawable/rounded_borders"
            android:onClick="checkAnswer" />

    </LinearLayout>

</LinearLayout>